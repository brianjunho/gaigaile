<h3>My Listings</h3>
<h5>Here you can view and edit all of your open listings</h5>
<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Name</th>
    <!-- <th class="center">Description</th> -->
    <th class="center">Action</th>
  </tr>
  
  <% @listings.each do |listing| %>
  <tr>
    <td><%= listing.name %></td>
   <!-- <td><%= listing.description %></td> -->
    <td>
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "View", listing, class: "btn btn-link" %></li>
          <li> <%= link_to "Edit", edit_listing_path(listing), class: "btn btn-link" %></li>
          <li><%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
          </ul>
      </div>
    </td>
  </tr>
<% end %>
</table>


<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
